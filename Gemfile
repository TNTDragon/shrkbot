source 'https://rubygems.org'

# Discord bot framework
gem 'discordrb', git: 'https://github.com/meew0/discordrb'

# SSH Tunnel
gem 'net-ssh-gateway'

# Allows MySQL database interaction
gem 'mysql2'

# Nicer database interaction
gem 'sequel'

# Charts
gem 'gruff', git: 'https://github.com/badBlackShark/gruff'

# Scheduling
gem 'rufus-scheduler'
